---
import LayoutBasic from '../layouts/LayoutBasic.astro';
import NosotrosSeccion1 from '../components/nosotros/Secciones/NosotrosSeccion1.jsx';
import NosotrosSeccion2 from '../components/nosotros/Secciones/NosotrosSeccion2.jsx';
import NosotrosSeccion3 from '../components/nosotros/Secciones/NosotrosSeccion3.jsx';
import NosotrosSeccion4 from '../components/nosotros/Secciones/NosotrosSeccion4.jsx';
