---
import LayoutBasic from '../layouts/LayoutBasic.astro';

import IndexSeccion1 from '../components/index/Secciones/IndexSeccion1.jsx'; // Hero Section
import IndexSeccion2 from '../components/index/Secciones/IndexSeccion2.jsx'; // Servicios destacados
import IndexSeccion3 from '../components/index/Secciones/IndexSeccion3.jsx'; // Promociones activas
import IndexSeccion4 from '../components/index/Secciones/IndexSeccion4.jsx'; // Beneficios diferenciales
import IndexSeccion5 from '../components/index/Secciones/IndexSeccion5.jsx'; // Testimonios/reseñas
import IndexSeccion6 from '../components/index/Secciones/IndexSeccion6.jsx'; // Mapa de ubicación
---

<LayoutBasic title="Alex Taller Mecánico - Tu auto en las mejores manos" showFooter={true}>
    <!-- Hero Section con video de fondo -->
    <IndexSeccion1 transition:persist client:only/>
    
    <!-- Servicios destacados (cards con íconos) -->
    <IndexSeccion2 transition:persist client:only/>
    
    <!-- Promociones activas (grid) -->
    <IndexSeccion3 transition:persist client:only/>
    
    <!-- Beneficios diferenciales -->
    <IndexSeccion4 transition:persist client:only/>
    
    <!-- Testimonios/reseñas -->
    <IndexSeccion5 transition:persist client:only/>
    
    <!-- Mapa de ubicación rápida -->
    <IndexSeccion6 transition:persist client:only/>
</LayoutBasic>

