---
import LayoutBasic from '../layouts/LayoutBasic.astro';

import ServiciosSeccion1 from '../components/servicios/Secciones/ServiciosSeccion1.jsx';
import ServiciosSeccion2 from '../components/servicios/Secciones/ServiciosSeccion2.jsx';
import ServiciosSeccion3 from '../components/servicios/Secciones/ServiciosSeccion3.jsx';
import ServiciosSeccion4 from '../components/servicios/Secciones/ServiciosSeccion4.jsx';
import ServiciosSeccion5 from '../components/servicios/Secciones/ServiciosSeccion5.jsx';
import ServiciosSeccion6 from '../components/servicios/Secciones/ServiciosSeccion6.jsx';
---

<LayoutBasic title="Servicios Automotrices - Alex Taller Mecánico" showFooter={true}>
    <!-- Hero Section - Servicios -->
    <ServiciosSeccion1 transition:persist client:load />
    
    <!-- Grid de Servicios Principales -->
    <ServiciosSeccion2 transition:persist client:load />
    
    <!-- Servicios Complementarios -->
    <ServiciosSeccion3 transition:persist client:load />
    
    <!-- Ventajas Competitivas -->
    <ServiciosSeccion4 transition:persist client:load />
    
    <!-- Galería de Trabajos Realizados -->
    <ServiciosSeccion5 transition:persist client:load />
    
    <!-- CTA Final y Contacto -->
    <ServiciosSeccion6 transition:persist client:load />
</LayoutBasic>

